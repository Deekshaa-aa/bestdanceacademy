extends base.pug

block scripts 
    script(src='/static/index.js')

block style
    style 
        include ../static/style.css
        include ../static/styleContact.css

block content 
    div.container
        h1 Contact Us
        form(action="/contact", method="post").myForm 
            input(type="text", name="name", placeholder="Enter your name").myInput
            input(type="phone", name="phone", placeholder="Enter your number").myInput
            input(type="email", name="email", placeholder="Enter your email Id").myInput
            input(type="text", name="address", placeholder="Enter your address").myInput
            input(type="text", name="desc", placeholder="Enter your concern").myInput
            button.btn 
                | Submit